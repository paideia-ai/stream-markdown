{
  "fmt": {
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "plugins": [
      "jsr:@aireone/deno-lint-curly"
    ]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "lib": ["dom", "dom.iterable", "deno.window"]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "example": "deno run -A scripts/run-example.ts"
  },
  "imports": {
    "@/stream-markdown": "./src/index.ts",
    "@std/assert": "jsr:@std/assert@^1.0.14"
  }
}
